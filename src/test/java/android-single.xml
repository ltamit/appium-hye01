<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite thread-count="100" name="Mobile" parallel="tests">

    <test name="Test_Change_Color">
        <parameter name="version" value="11" />
        <parameter name="platform" value="Android" />
        <parameter name="device" value="Galaxy.*" />
        <classes>
            <class name="TestChangeColor" />
        </classes>
    </test>

    <test name="Test_Text_And_Toast">
        <parameter name="version" value="12" />
        <parameter name="platform" value="Android" />
        <parameter name="device" value="Pixel.*" />
        <classes>
            <class name="TestTextAndToast" />
        </classes>
    </test>

    <test name="Test_Notification_GeoLocation">
        <parameter name="version" value="13" />
        <parameter name="platform" value="Android" />
        <parameter name="device" value="Galaxy.*" />
        <classes>
            <class name="TestNotificationAndGeoLocation" />
        </classes>
    </test>



</suite>
